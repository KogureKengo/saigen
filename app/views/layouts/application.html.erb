<!DOCTYPE html>
<html>
<head>
  <title>Saigen</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

  <div class="globalnav__menu">
    <nav class="globalnav">

    <div class="logo">
      <ul class='clearfix'>
        <li class='left'>
          <%= link_to(image_tag("logo.png",:alt=>"ロゴ", :class=>"img_logo"), {:controller => '/recipes', :action => 'index'}) %>
        </li>
        <% if user_signed_in? %>
          <li class='right'>
            <%= link_to 'ログアウト', "/users/sign_out", method: :delete %>
          </li>
        <% else %>
          <li class='right'>
            <%= link_to 'ログイン', "/users/sign_in", method: :get %>
          </li>
        <% end %>
          <li class='right'>
            <%= link_to '投稿する', "/recipes/new", method: :get %>
          </li>
      </ul>
    </div>

    <div class="div_menu">
        <form accept-charset="UTF-8" action="" method="get">
            <select id="area_id" class="select_menu" onchange="this.form.submit()">
              <option selected="selected" value="/">メニュー</option>
              <option value="/categories/index">Categoryから探す</option>
            </select>
        </form>
    </div>

    <script type="text/javascript">
      $(function(){
          $('#area_id').change(function() {
              $("form").attr('action', $(this).val());
              $("form").submit();
          });
      });
    </script>

    </nav>
  </div>

  <%= yield %>

</body>
</html>
